# Reachy Agent Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# REQUIRED: Core API Keys
# =============================================================================

# Anthropic API key for Claude (required)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# =============================================================================
# OPTIONAL: External Service Integrations
# =============================================================================

# Home Assistant
# Get your token at: Settings > Long-Lived Access Tokens
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your-home-assistant-long-lived-token

# Google Calendar
# See setup guide for OAuth2 configuration
GOOGLE_CREDENTIALS_PATH=~/.reachy/credentials/google.json

# GitHub
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: repo, notifications
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_REPOS=owner/repo1,owner/repo2

# Weather (OpenWeather API)
# Get your key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHER_LOCATION=San Francisco, CA

# =============================================================================
# OPTIONAL: Offline Fallback Configuration
# =============================================================================

# Ollama (local LLM fallback)
# Install: curl -fsSL https://ollama.com/install.sh | sh
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# =============================================================================
# OPTIONAL: Development & Debugging
# =============================================================================

# Enable debug logging
REACHY_DEBUG=0

# Daemon URL (defaults to localhost:8000)
REACHY_DAEMON_URL=http://localhost:8000

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
